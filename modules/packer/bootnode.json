{
  "builders":[
    {
      "base_image_ocid": "{{user `base_image_ocid`}}",
      "tenancy_ocid": "{{user `tenancy_ocid`}}",
      "compartment_ocid": "{{user `compartment_ocid`}}",
      "user_ocid": "{{user `user_ocid`}}",
      "availability_domain": "{{user `availability_domain`}}",
      "region": "eu-frankfurt-1",
      "fingerprint": "{{user `fingerprint`}}",
      "key_file": "{{user `key_file`}}",
      "image_name": "BootnodeImage",
      "shape": "VM.Standard2.1",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "subnet_ocid": "{{user `priv_subnet`}}",
      "type": "oracle-oci"
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "diskmount.sh",
      "destination": "/tmp/diskmount.sh"
    },
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo yum update -y",
        "sudo yum update oci-utils",
        "sudo yum install -y wget unzip tar xz curl ipset docker-engine ntp python-oci-cli",
        "sudo systemctl enable firewalld",
        "sudo systemctl start firewalld",
        "sudo firewall-cmd --permanent --zone=public --add-service=http",
        "sudo firewall-cmd --permanent --zone=public --add-service=https",
        "sudo firewall-cmd --permanent --zone=public --add-service=ssh",
        "sudo firewall-cmd --reload",
        "sudo groupadd nogroup",
        "sudo systemctl enable docker && sudo systemctl start docker",
        "sudo systemctl enable ocid.service && sudo systemctl start ocid.service",
        "sudo chmod +x /tmp/diskmount.sh",
        "sudo sed -i 's/SELINUX=enforcing/SELINUX=permissive/g' /etc/selinux/config"
      ]
    }
  ]
}
